@model Meet.Models.Car

@{
    ViewData["Title"] = "Rate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rate</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CarRate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarId" />
            <input type="hidden" asp-for="Vin" />
            <input type="hidden" asp-for="Make" />
            <input type="hidden" asp-for="Model" />
            <input type="hidden" asp-for="Year" />
            <input type="hidden" asp-for="Mileage" />
            <input type="hidden" asp-for="Mods" />
            <input type="hidden" asp-for="IdentityUserId" />
            <input type="hidden" asp-for="AvgRating" />
            <div class="form-group">
                <input type="number" name="newRate" />
                <span asp-validation-for="AvgRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Rate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
